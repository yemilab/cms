{
  "name": "cupweb",
  "version": "0.0.1",
  "description": "",
  "author": "Hyounggyu Kim",
  "license": "MIT",
  "config": {
    "src_css": "sass",
    "src_img": "images",
    "src_vendor": "vendor",
    "dest_img": "../static_compiled/img",
    "dest_vendor": "../static_compiled/vendor",
    "dest_css": "../static_compiled/css"
  },
  "scripts": {
    "//[ Utility ]//": "",
    "create_dirs:dest_css": "mkdir -p $npm_package_config_dest_css",
    "create_dirs:dest_img": "mkdir -p $npm_package_config_dest_img",
    "create_dirs:dest_vendor": "mkdir -p $npm_package_config_dest_vendor",
    "create_dirs": "npm-run-all -p create_dirs:*",
    "clean:dist": "rm -rf $npm_package_config_dist/{js/**,css/**,images/**,vendor/**}",
    "clean": "npm-run-all -p clean:*",
    "//[ SASS ]//": "",
    "rebuild:css": "npm rebuild node-sass",
    "compile:css": "node-sass -o $npm_package_config_dest_css $npm_package_config_src_css",
    "compile:css:dev": "npm run compile:css -- --output-style expanded --source-map true",
    "compile:css:watch": "npm run compile:css -- --output-style expanded --source-map true --watch",
    "compile:css:prod": "npm run compile:css -- --output-style compressed",
    "compile:css:debug": "npm run compile:css -- --output-style compressed --watch",
    "postcompile:css": "npm run autoprefixer && npm run customproperties",
    "autoprefixer": "postcss --map false -u autoprefixer -r $npm_package_config_dest_css/*.css",
    "customproperties": "postcss -u postcss-custom-properties -b -r $npm_package_config_dest_css/*.css",
    "//[ Linting ]//": "",
    "lint:css": "sass-lint $npm_package_config_src_css'/**/**' -v -q || true",
    "lint": "npm-run-all -p lint:css",
    "//[ Watches ]//": "",
    "watch:img": "onchange $npm_package_config_src_img'/**/**' -- npm-run-all sync:img reload",
    "watch:img:debug": "onchange $npm_package_config_src_img'/**/**' -- npm-run-all sync:img",
    "watch:css": "onchange $npm_package_config_dest_css -- npm-run-all -p reload lint:css",
    "watch:css:debug": "onchange $npm_package_config_dest_css -- npm-run-all -p autoprefixer",
    "watch": "npm-run-all -p watch:*",
    "//[ Syncs ]//": "",
    "sync:img": "rsync -rtvu --delete $npm_package_config_src_img/ $npm_package_config_dest_img/",
    "sync:vendor": "rsync -rtvu --delete $npm_package_config_src_vendor/ $npm_package_config_dest_vendor/",
    "sync": "npm-run-all -p sync:*",
    "//[ Tasks ]//": "",
    "build": "npm-run-all clean rebuild:css create_dirs compile:*:dev",
    "build:prod": "npm-run-all clean rebuild:css create_dirs compile:*:prod",
    "start": "npm-run-all clean rebuild:css create_dirs compile:*:dev -p compile:*:watch watch serve --silent",
    "debug": "npm-run-all clean rebuild:css create_dirs compile:*:prod -p compile:*:debug watch:*:debug --silent"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^1.9.1",
    "popper.js": "^1.16.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "postcss-custom-properties": "^9.0.2",
    "sass-lint": "^1.13.1"
  }
}
